<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.managefunction.CHUYENXE.AddRouteActivity"
    android:orientation="vertical"
    android:background="@drawable/background">


    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBefore"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:padding="@dimen/margin_base0.5"
            app:tint="@color/maincolor2" />

        <TextView
            style="@style/edt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_come_back"
            android:textColor="@color/maincolor2" />

        <TextView
            android:id="@+id/textviewDeleteRoute"
            android:layout_marginLeft="@dimen/margin_basex2"
            android:layout_marginRight="@dimen/margin_base0.5"
            android:gravity="end"
            style="@style/edt_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_delete"
            android:textColor="@color/colorText_delete" />

    </LinearLayout>

    <TextView
        android:id="@+id/textviewTitle"
        android:layout_marginTop="@dimen/margin_basex2"
        android:layout_marginBottom="@dimen/margin_base"
        android:gravity="center"
        android:text="@string/text_manage_route"
        android:theme="@style/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="@dimen/margin_base"
                    android:layout_marginRight="@dimen/margin_base"
                    android:background="@drawable/edittext_shape"
                    android:gravity="center_vertical"
                    android:theme="@style/edt_view"
                    android:id="@+id/textViewStartPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_start_point"
                    android:drawableLeft="@drawable/point_start"/>

                <TextView
                    android:layout_marginTop="@dimen/margin_base"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:layout_marginRight="@dimen/margin_base"
                    android:background="@drawable/edittext_shape"
                    android:gravity="center_vertical"
                    android:theme="@style/edt_view"
                    android:id="@+id/textViewEndPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_end_point"
                    android:drawableLeft="@drawable/point_end"/>

                <TextView
                    android:layout_marginTop="@dimen/margin_base"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:layout_marginRight="@dimen/margin_base"
                    android:background="@drawable/edittext_shape"
                    android:gravity="center_vertical"
                    android:theme="@style/edt_view"
                    android:id="@+id/textviewDepartureDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_date"
                    android:drawableLeft="@drawable/date"/>

                <TextView
                    android:layout_marginTop="@dimen/margin_base"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:layout_marginRight="@dimen/margin_base"
                    android:background="@drawable/edittext_shape"
                    android:gravity="center_vertical"
                    android:theme="@style/edt_view"
                    android:id="@+id/textviewDepartureTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_time"
                    android:drawableLeft="@drawable/schedule"/>

                <TextView
                    android:layout_marginTop="@dimen/margin_base"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:layout_marginRight="@dimen/margin_base"
                    android:background="@drawable/edittext_shape"
                    android:gravity="center_vertical"
                    android:theme="@style/edt_view"
                    android:id="@+id/textviewXe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_xe"
                    android:drawableLeft="@drawable/airport_shuttle"/>

                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/margin_base"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:layout_marginRight="@dimen/margin_base"
                    android:background="@drawable/edittext_shape"
                    android:gravity="center_vertical"
                    android:theme="@style/edt_view"
                    android:id="@+id/textviewSeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_seat"
                    android:drawableLeft="@drawable/seat"/>

                <EditText
                    android:layout_marginTop="@dimen/margin_base"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:layout_marginRight="@dimen/margin_base"
                    android:background="@drawable/edittext_shape"
                    android:gravity="center_vertical"
                    android:theme="@style/edt_view"
                    android:id="@+id/edittextPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_price"
                    android:drawableLeft="@drawable/monetization_on"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/textviewTitlePaymentStt"
                    android:textSize="@dimen/text_content_size"
                    android:layout_marginTop="@dimen/margin_base"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:text="@string/text_payment_stt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:visibility="gone"
                    android:id="@+id/radiogroupPaymentStatus"
                    android:theme="@style/edt_view"
                    android:layout_marginTop="@dimen/margin_base0.5"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/radioButtonUnpaid"
                        android:layout_weight="1"
                        android:text="@string/text_unpaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    
                    <RadioButton
                        android:id="@+id/radioButtonPaid"
                        android:layout_weight="1"
                        android:text="@string/text_paid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RadioGroup>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/textviewTitleTicketStt"
                    android:textSize="@dimen/text_content_size"
                    android:layout_marginTop="@dimen/margin_base"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:text="@string/text_ticket_stt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:visibility="gone"
                    android:id="@+id/radiogroupTicketStatus"
                    android:theme="@style/edt_view"
                    android:layout_marginTop="@dimen/margin_base0.5"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/radioButtonUpcomming"
                        android:layout_weight="1"
                        android:text="@string/text_upcomming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:id="@+id/radioButtonComplete"
                        android:layout_weight="1"
                        android:text="@string/text_complete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:id="@+id/radioButtonCancel"
                        android:layout_weight="1"
                        android:text="@string/action_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/textviewTitleFeatured"
                    android:textSize="@dimen/text_content_size"
                    android:layout_marginTop="@dimen/margin_base"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:text="@string/text_Feature_route"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioGroup
                    android:id="@+id/radiogroupFeatureRoute"
                    android:theme="@style/edt_view"
                    android:layout_marginTop="@dimen/margin_base0.5"
                    android:layout_marginLeft="@dimen/margin_base"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/radioButtonUnFeatureless"
                        android:layout_weight="1"
                        android:text="@string/text_featureless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioButton
                        android:id="@+id/radioButtonFeature"
                        android:layout_weight="1"
                        android:text="@string/text_featured"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RadioGroup>

                <Button
                    android:id="@+id/buttonAddRoute"
                    android:text="@string/text_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_base"
                    android:textSize="@dimen/text_content_size"
                    android:textColor="@color/maincolor2"
                    android:background="@drawable/button_shape"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>


</LinearLayout>